@page "/characters"

@inject NavigationManager NavigationManager;

<PageTitle>Character</PageTitle>

<MudContainer Class="mt-16 px-8" MaxWidth="MaxWidth.ExtraExtraLarge">
    <MudGrid>
        <MudItem xs="8" sm="6" md="4">
            <MudCard>
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">Norman Harper</MudText>
                    </CardHeaderContent>
                    <CardHeaderActions>
                        <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Default" />
                    </CardHeaderActions>
                </MudCardHeader>
                <MudCardContent>
                    <MudText>District Police</MudText>
                    <MudText Typo="Typo.body2">Officer</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Primary" OnClick="@(() => OnCharacterSelectClicked("foo123bar"))">Select</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudContainer>

@code
{
    void OnCharacterSelectClicked(string characterId)
    {
        NavigationManager.NavigateTo($"/characters/{characterId}");
    }
}