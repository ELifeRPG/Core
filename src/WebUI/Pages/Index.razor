@page "/"

@inject NavigationManager NavigationManager

<PageTitle>Index</PageTitle>

<MudContainer Class="mt-16 px-8" MaxWidth="MaxWidth.Medium">
    <AuthorizeView>
        <Authorized>
            Signed in as @context.User.Identity?.Name.
            <br/>
            <MudButton OnClick="@(() => NavigationManager.NavigateTo("/authentication/signout", true))">Sign-Out</MudButton>
        </Authorized>
        <NotAuthorized>
            <MudButton OnClick="@(() => NavigationManager.NavigateTo("/authentication/signin?provider=steam", true))">Sign-In</MudButton>
        </NotAuthorized>
    </AuthorizeView>
</MudContainer>
