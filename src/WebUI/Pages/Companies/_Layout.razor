@using System.Collections.ObjectModel
@inherits LayoutComponentBase
@layout MainLayout

<MudMainContent>

    <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="mt-8">

        <Breadcrumbs/>

        @Body

    </MudContainer>

</MudMainContent>

@code
{
    [Inject]
    public ObservableCollection<BreadcrumbItem> Breadcrumbs { get; set; } = null!;

    protected override void OnInitialized()
    {
        Breadcrumbs.Clear();
        Breadcrumbs.Add(new BreadcrumbItem("Companies", href: "/companies"));
    }
}